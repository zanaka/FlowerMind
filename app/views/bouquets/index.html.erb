<p id="notice"><%= notice %></p>

<h1>これまでに作られた花束</h1>

<table>
  <thead>
    <tr>
      <th>Word1</th>
      <th>Word2</th>
      <th>Word3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bouquets.each do |bouquet| %>
      <tr>
        <td><%= bouquet.word1 %></td>
        <td><%= bouquet.word2 %></td>
        <td><%= bouquet.word3 %></td>
        <td><%= link_to '詳細', bouquet %></td>
        <td><%= link_to '編集', edit_bouquet_path(bouquet) %></td>
        <td><%= link_to '削除', bouquet, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

